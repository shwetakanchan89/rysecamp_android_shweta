<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:padding="10dp"
    android:orientation="vertical">

 <!--   <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:id="@+id/contributor_image"/>-->

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contributor_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_dummy_profile_photo"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/maroon_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sajjan R"
        android:layout_marginTop="5dp"
        android:id="@+id/name"
        android:textColor="#5b6061"
        android:textSize="14sp"
        android:fontFamily="@font/nunito_bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/usernmae"
        android:text="fsd;kfsld32"
        android:layout_marginTop="3dp"
        android:textColor="#c6cfd1"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_bold"/>

