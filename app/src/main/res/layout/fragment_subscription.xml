<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5">

    <TextView
        android:id="@+id/txtplans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pricing Plans"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>


    <TextView
        android:id="@+id/subscription1"
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtplans"
        android:fontFamily="@font/nunito_regular"
        android:layout_marginTop="20dp"
        android:text="              for a month\n\nAccess all streams at\n Rs.99 for a month "
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/subscription_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹99"
            android:layout_below="@id/txtplans"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/colorWhite"
            android:textSize="45dp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/subscription2"
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subscription1"
        android:layout_marginTop="20dp"
        android:text="                     for 3 months\n\n Access all streams at \n Rs.199 for 3 months"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nunito_regular"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@drawable/subscription_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹199"
            android:layout_below="@id/txtplans"
            android:layout_marginTop="269dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/colorWhite"
            android:textSize="45dp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/subscription3"
        android:layout_width="270dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/subscription2"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="                   for a year\n \nAccess all streams at\n Rs.600 for a year"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nunito_regular"
        android:background="@drawable/subscription_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹699"
            android:layout_below="@id/txtplans"
            android:layout_marginTop="457dp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/colorWhite"
            android:textSize="45dp"
            />

    </LinearLayout>


</RelativeLayout>